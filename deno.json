{
    "tasks": {
        "test": "deno test -A utl/test.ts",
        "major": "publish major --git --tag --npm",
        "minor": "publish minor --git --tag --npm",
        "patch": "publish patch --git --tag --npm",
        "emulator": "gcloud emulators firestore start --host-port=127.0.0.1:9000 --project=test"
    },
    "lint": {
        "exclude": [
            ".github",
            ".vscode"
        ]
    },
    "fmt": {
        "exclude": [
            ".github",
            ".vscode"
        ],
        "singleQuote": true,
        "indentWidth": 4,
        "lineWidth": 800,
        "semiColons": true,
        "useTabs": false
    }
}
